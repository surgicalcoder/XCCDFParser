<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net40</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Monty Alhakim</Authors>
    <Company />
    <Product>XCCDF Parser</Product>
    <Description>Parsing of XCCDF (eXtensible Configuration Checklist Description Format) files. XCCDF is a specification language for writing security checklists, benchmarks, and related kinds of documents. An XCCDF document represents a structured collection of security configuration rules for some set of target systems.</Description>
    <RepositoryUrl>https://github.com/surgicalcoder/XCCDFParser</RepositoryUrl>
    <PackageTags>XCCDF</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

</Project>
